@model Rental_Car_Demo.ViewModel.RegisterAndLoginViewModel;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="container-custom">
        <a class="close-btn text-decoration-none"></a>
        <div class="row">
            <div class="col-md-6">
                <h4>LOG IN USING YOUR ACCOUNT</h4>
                @using (Html.BeginForm("Login", "Users", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label for="loginEmail" class="form-label">Your email address</label>
                        @Html.TextBoxFor(x => x.User.Email, new { @class = "form-control", placeholder = "Your email address", id = "loginEmail" })
                        <span class="text-danger" id="loginEmailError"></span>
                    </div>
                    <div class="mb-3 position-relative">
                        <div class="abccc" style="position:relative;">
                            <label for="loginPassword" class="form-label">Password</label>
                            @Html.TextBoxFor(x => x.User.Password, new { @class = "form-control", type = "password", placeholder = "Password", id = "loginPassword" })
                            <span class="text-danger" id="loginPasswordError"></span>
                            <i class="bx bx-low-vision toggle-password3" id="toggleLoginPassword"></i>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="text-danger" id="serverError">@ViewBag.Error</div>
                    }
                    <div class="mb-1 form-check">
                        <label class="form-check-label">
                            @Html.CheckBoxFor(x => x.User.RememberMe, new { @class = "form-check-input" }) @Html.DisplayNameFor(x => x.User.RememberMe)
                        </label>
                    </div>

                    <div class="mb-3 d-flex justify-content-center">
                        <a asp-controller="Users" asp-action="ResetPassword" class="text-decoration-none"><u>Forgot your password?</u></a>
                    </div>
                    <button type="submit" class="btn btn-custom w-100 far fa-user"> LOG IN</button>
                }
            </div>
           
            <div class="col-md-5">
                <h4>NOT A MEMBER YET?</h4>
                <form asp-controller="Users" asp-action="Register" method="post">


                    <div class="mb-3">
                        <label asp-for="Register.Name" class="form-label"></label>
                        <input asp-for="Register.Name" class="form-control" placeholder="Your name" />
                        <span asp-validation-for="Register.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Register.Email" class="form-label"></label>
                        <input asp-for="Register.Email" class="form-control" placeholder="Your email address" />
                        <span asp-validation-for="Register.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3 position-relative">
                        <label asp-for="Register.Password" class="form-label"></label>
                        <div class="abccc" style="position:relative;">
                            <input asp-for="Register.Password" type="password" class="form-control" id="signupPassword" placeholder="Your password" />
                            <i class='bx bx-low-vision toggle-password' id="toggleSignupPassword"></i>
                        </div>
                        <small class="form-text text-muted">Use at least one letter, one number, and seven characters.</small>
                        <span asp-validation-for="Register.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 position-relative">
                        <label asp-for="Register.ConfirmPassword" class="form-label">Confirm password</label>
                        <div class="abccc" style="position:relative;">
                            <input asp-for="Register.ConfirmPassword" type="password" class="form-control" id="signupConfirmPassword" placeholder="Confirm password" />
                            <i class='bx bx-low-vision toggle-password' id="toggleSignupConfirmPassword"></i>
                        </div>
                        <span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Register.Phone" class="form-label"></label>
                        <input asp-for="Register.Phone" class="form-control" placeholder="Your phone number" />
                        <span asp-validation-for="Register.Phone" class="text-danger"></span>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="form-check mb-3">
                            <input asp-for="Register.Role" class="form-check-input" type="radio" value="rentCar" id="rentCar" checked>
                            <label class="form-check-label" for="rentCar">I want to rent a car</label>
                        </div>
                        <div class="form-check mb-3 ps-5">
                            <input asp-for="Register.Role" class="form-check-input" type="radio" value="carOwner" id="carOwner">
                            <label class="form-check-label" for="carOwner">I am a car owner</label>
                        </div>
                    </div>
                    <span asp-validation-for="Register.Role" class="text-danger"></span>

                    <div class="mb-3">
                        <input asp-for="Register.AgreeToTerms" type="checkbox" id="terms" />
                        <label asp-for="Register.AgreeToTerms" class="form-check-label" for="terms">
                            I have read and agree with the <a href="#" class="text-decoration-none ps-3"><u>Terms and Conditions</u></a>
                        </label>
                    </div>
                    <span asp-validation-for="Register.AgreeToTerms" class="text-danger"></span>

                    <div class="form-group">
                        <button type="submit" class="btn btn-custom w-100 far fa-user fa-plus"> SIGN UP</button>
                    </div>
                </form>
                @*  @if (TempData["SuccessMessage"] != null)
                {
                <div class="alert alert-success">
                @TempData["SuccessMessage"]
                </div>
                } *@
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @*thong bao dang ky thanh cong*@
    <script>
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                swal("Success!", "@TempData["SuccessMessage"]", "success");
            </text>
        }
    </script>
}


