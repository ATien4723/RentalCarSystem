    <script>
        $(document).ready(function () {
            $('#pickupLocation').on('input', function () {
                var query = $(this).val();
                if (query.length > 2) {
                    $.ajax({
                        url: 'https://nominatim.openstreetmap.org/search',
                        data: {
                            q: query,
                            format: 'json',
                            addressdetails: 1,
                            limit: 5
                        },
                        success: function (data) {
                            $('#suggestions').empty();
                            $.each(data, function (i, place) {
                                $('#suggestions').append(
                                    '<div class="suggestion-item" data-lat="' + place.lat + '" data-lon="' + place.lon + '">' + place.display_name + '</div>'
                                );
                            });
                            $('.suggestion-item').on('click', function () {
                                var displayName = $(this).text();
                                $('#pickupLocation').val(displayName);
                                $('#suggestions').empty();
                            });
                        }
                    });
                } else {
                    $('#suggestions').empty();
                }
            });

            $(document).click(function (event) {
                if (!$(event.target).closest('#pickupLocation, #suggestions').length) {
                    $('#suggestions').empty();
                }
            });
        });
    </script>


