    <script>
        const images = [
            'img/lookcar.jpg',
            'img/sieuxe1.jpeg',
            'img/rentcar1.jpg',
            'img/sieuxe4.jpg',
            'img/xechay3.jpg'

        ];
        let currentIndex = 0;

        function changeBackgroundImage() {
            const section = document.getElementById('background-section');
            section.style.backgroundImage = `url(${images[currentIndex]})`;
            currentIndex = (currentIndex + 1) % images.length;
