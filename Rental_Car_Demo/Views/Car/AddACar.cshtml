    <script>
        const steps = document.querySelectorAll('.step');
        const stepContents = document.querySelectorAll('.container.mt-3');

        function navigateTo(stepIndex) {
            steps.forEach((step, index) => {
                if (index === stepIndex) {
                    step.classList.add('active');
                } else {
                    step.classList.remove('active');
                }
            });

            stepContents.forEach((content, index) => {
                if (index === stepIndex) {
                    content.classList.remove('d-none');
                } else {
                    content.classList.add('d-none');
                }
            });
        }

        function nextStep() {
            let currentStep = 0;
            steps.forEach((step, index) => {
                if (step.classList.contains('active')) {
                    currentStep = index;
                }
            });

            let checked = true;
            let mess = "Please fill out this field";
            switch (currentStep) {
                case 0:
                    const lp = document.getElementById('LicensePlate').value.trim();
                    const seats = Number(document.getElementById('Seats').value.trim());
                    const regis = document.getElementsByName('registration')[0].files.length;
                    const cer = document.getElementsByName('certificate')[0].files.length;
                    const lpPattern = /^(1[1-9]|[2-9][0-9])[A-Z](-\d{3}\.\d{2}|-\d{4})$/;

                    if (!lp || !lpPattern.test(lp)) {
                        checked = false;
                        document.getElementById('checkLP').innerHTML = "Check LicensePlate!";
                    }

                    if (!checkLPExist(lp)) {

                        checked = false;
                        document.getElementById('checkLP').innerHTML = "License Plate already exists!";

                    }

                    if (!seats || !Number.isInteger(seats) || seats <= 0 || seats > 49) {
                        checked = false;
                        document.getElementById('checkSeats').innerHTML = "Seats must be a integer in range 1-49";
                    }

                    if (regis === 0 || cer === 0) {
                        checked = false;
                        document.getElementById('checkDocument').innerHTML = "Required Registration paper & Certificate of inspection";
                    } else {
                        document.getElementById('checkDocument').innerHTML = "";
                    }
                    break;
                case 1:
                    const Mileage = document.getElementById('Mileage').value.trim();
                    const Fuel = document.getElementById('FuelConsumption').value.trim();
                    const street = document.getElementById('street').value.trim();
                    const des = document.getElementById('Description').value.trim();

                    const front = document.getElementsByName('front')[0].files.length;
                    const back = document.getElementsByName('back')[0].files.length;
                    const left = document.getElementsByName('left')[0].files.length;
                    const right = document.getElementsByName('right')[0].files.length;

                    if (!Mileage || Mileage <= 0) {
                        checked = false;
                        document.getElementById('checkMileage').innerHTML = "Check Mileage";
                    }

                    if (!Fuel || Fuel <= 0) {
                        checked = false;
                        document.getElementById('checkFuel').innerHTML = "Check FuelConsumption";
                    }

                    if (!street) {
                        checked = false;
                        document.getElementById('checkStreet').innerHTML = "Check Street, House Number";
                    } else {
                        document.getElementById('checkStreet').innerHTML = "";
                    }

                    if (!des) {
                        checked = false;
                        document.getElementById('checkDes').innerHTML = "Description is not empty!";
                    }

                    if (front === 0 || back === 0 || left === 0 || right === 0) {
                        checked = false;
                        document.getElementById('checkImages').innerHTML = "Required 4 images of Car";
                    } else {
                        document.getElementById('checkImages').innerHTML = "";
                    }
                    break;
                case 2:
                    const price = Number(document.getElementById('BasePrice').value.trim());
                    const deposit = Number(document.getElementById('Deposit').value.trim());

                    if (!price || price <= 0) {
                        checked = false;
                        document.getElementById('checkBP').innerHTML = "Check base price !";
                    }

                    if (!deposit || deposit <= 0) {
                        checked = false;
                        document.getElementById('checkDeposit').innerHTML = "Check Deposit !";
                    }
                    break;
            }

            if (checked && currentStep < steps.length - 1) {
                navigateTo(currentStep + 1);
            }
        }

    </script>
