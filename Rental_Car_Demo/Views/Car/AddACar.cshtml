@model Rental_Car_Demo.Models.Car
@{
    var lpList = (List<string>)ViewBag.LPList;
    ViewData["Title"] = "Add a car";
    Layout = "~/Views/Shared/_LayoutCarOwner.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rent Car Home</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <style>
        .progress-container {
            display: flex;
            justify-content: space-between;
            position: relative;
            margin: 20px 0;
            font-family: Arial, sans-serif;
        }

        .step {
            position: relative;
            flex: 1;
            text-align: center;
            padding: 10px;
            color: #555;
            background-color: #e6e6e6;
            border-radius: 5px;
            margin-right: 20px;
            cursor: pointer;
        }

            .step.active {
                background-color: #007bff;
                color: white;
                font-weight: bold;
            }

            .step::after {
                content: "";
                position: absolute;
                top: 0;
                right: -20px;
                width: 0;
                height: 0;
                border-top: 22px solid transparent;
                border-bottom: 23px solid transparent;
                border-left: 23px solid #e6e6e6;
            }

            .step.active::after {
                border-left-color: #007bff;
            }

            .step:last-child {
                margin-right: 0;
            }

                .step:last-child::after {
                    display: none;
                }

        .carousel-control-prev-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E") !important;
        }

        .carousel-control-next-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E") !important;
        }

        .carousel-inner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .carousel-item {
            height: 350px;
        }

        .d-none {
            display: none;
        }

        .custom-drag-area {
            margin-top: 1rem; /* Equivalent to mt-3 */
            width: 250px; /* Equivalent to w-88 */
            border-radius: 1rem; /* Equivalent to rounded-2xl */
            border: 2px dashed black; /* Equivalent to border-2 and border-dashed */
            padding: 1.5rem; /* Equivalent to p-6 */
            display: flex;
            flex-direction: column; /* Equivalent to flex-col */
            align-items: center; /* Equivalent to items-center */
            justify-content: center; /* Equivalent to justify-content-center */
            background-color: white;
            height: 250px;
        }

        .custom-drag-area1 {
            margin-top: 1rem; /* Equivalent to mt-3 */
            border-radius: 1rem; /* Equivalent to rounded-2xl */
            border: 2px dashed black; /* Equivalent to border-2 and border-dashed */
            padding: 1.5rem; /* Equivalent to p-6 */
            display: flex;
            flex-direction: column; /* Equivalent to flex-col */
            align-items: center; /* Equivalent to items-center */
            justify-content: center; /* Equivalent to justify-content-center */
            background-color: white;
        }
    </style>
</head>



<body>
    <div class="container mt-4">
        <a class="link mt-5" href="~/Users/LoginOwn">Home</a> > <span>Add a car</span>

        <h4 class="mt-3 mb-3" style="font-weight: bold;">Add a car</h4>
    </div>

    <div class="container p-5" style="background-color: rgb(220, 234, 234);">
        <div class="progress-container">
            <div class="step active">Step 1: Basic</div>
            <div class="step">Step 2: Details</div>
            <div class="step">Step 3: Pricing</div>
            <div class="step">Step 4: Finish</div>
        </div>
        <form asp-action="AddACar" asp-controller="Car" method="post" enctype="multipart/form-data">

            <!-- Step 1 Content-->
            <div class="container mt-3" id="Step1">
                <h5 class=" text-danger">Note: Please check your information carefully, you'll not be able to change the basic details of your car, which is based on the registration information.</h5>

                <div class="row">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="LicensePlate" class="col-md-2 fw-bold">License plate:</label><br>
                            <input asp-for="LicensePlate" onchange="checkLPExist(this.value)" class="col-md-2 mt-3" style="width: 200px;" required>
                            <div>
                                <span asp-validation-for="LicensePlate" id="checkLP" class="text-danger fw-bold"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ColorId" class="col-md-2 fw-bold">Color:</label><br>
                            <select asp-for="ColorId" class="form-select mt-3" style="width: 200px; height: 45%;">
                                @foreach (var c in ViewBag.Color)
                                {
                                    <option value="@c.ColorId">@c.ColorName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-md-6">
                            <label class="col-md-2 fw-bold">Brand Name:</label><br>
                            <select onchange="filterModels()" asp-for="BrandId" class="form-select mt-3" style="width: 200px; height: 45%;" required>
                                @foreach (var b in ViewBag.Brand)
                                {
                                    <option value="@b.BrandId">@b.BrandName</option>
                                }
                            </select>

                        </div>
                        <div class="col-md-6">
                            <label class="col-md-2 fw-bold">Model:</label><br>
                            <select asp-for="ModelId" class="form-select mt-3" style="width: 200px; height: 45%;" id="Model" required>
                                @foreach (var m in ViewBag.Model)
                                {
                                    <option value="@m.ModelId" data-brand="@m.BrandId">@m.ModelName</option>
                                }
                            </select>

                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-md-6">
                            <label class="col-md-3 fw-bold">Production Year:</label><br>
                            <select asp-for="ProductionYear" class="form-select mt-3" style="width: 200px; height: 45%;"
                                    required>
                                @foreach (var y in ViewBag.Year)
                                {
                                    <option value="@y">@y</option>
                                }
                            </select>

                        </div>
                        <div class="col-md-6">
                            <label asp-for="Seats" class="col-md-2 fw-bold">No. of seats:</label><br>
                            <input asp-for="Seats" type="number" class="mt-3" style="width: 200px; height: 45%;" required />
                            <div>
                                <span asp-validation-for="Seats" id="checkSeats" class="text-danger fw-bold"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-md-6">
                            <label class="col-md-2 fw-bold">Transmission:</label><br>
                            <label class="radio-label" id="automatic-label">
                                <input type="radio" asp-for="TransmissionType" checked value="true" id="Automatic"> Automatic
                            </label>
                            <label class="radio-label" id="manual-label">
                                <input type="radio" asp-for="TransmissionType" value="false" id="Manual"> Manual
                            </label>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-2 fw-bold">Fuel:</label><br>
                            <label class="radio-label" id="automatic-label">
                                <input type="radio" asp-for="FuelType" name="Fuel" checked value="true" id="Gasoline"> Gasoline
                            </label>
                            <label class="radio-label" id="manual-label">
                                <input type="radio" asp-for="FuelType" name="Fuel" value="false" id="Diesel"> Diesel
                            </label>
                        </div>
                    </div>

                    <div class="mt-5 d-flex">
                        <p class="fw-bold" style="font-size: large;">Document:</p> <span style="font-size: large;" class="text-danger fw-bold ms-3" id="checkDocument"></span>

                    </div>

                    <div class="row mt-5">
                        <div class="col-md-4">
                            <label class="fw-bold">Registration paper:</label>
                            <div id="drag-area1" class="custom-drag-area">
                                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                                    <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                                    <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708z" />
                                </svg>
                                <header class="dragdrop1">Drag and drop</header>
                                <p>OR</p>
                                <a id="selectfile1" href="" style="color: rgb(98, 122, 239); text-decoration: underline;">Select file</a>
                                <input type="file" hidden name="registration" id="fileInput1" required />
                            </div>

                        </div>

                        <div class="col-md-4">
                            <label class="fw-bold">Certificate of inspection:</label>
                            <div id="drag-area2" class="custom-drag-area">
                                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                                    <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                                    <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708z" />
                                </svg>
                                <header class="dragdrop2">Drag and drop</header>
                                <p>OR</p>
                                <a id="selectfile2" href="" style="color: rgb(98, 122, 239); text-decoration: underline;">Select file</a>
                                <input type="file" hidden name="certificate" id="fileInput2" required />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label class="fw-bold">Insurance:</label>
                            <div id="drag-area3" class="custom-drag-area">
                                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                                    <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                                    <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708z" />
                                </svg>
                                <header class="dragdrop3">Drag and drop</header>
                                <p>OR</p>
                                <a id="selectfile3" href="" style="color: rgb(98, 122, 239); text-decoration: underline;">Select file</a>
                                <input type="file" hidden name="insurance" id="fileInput3">
                            </div>
                        </div>
                        <a class="mt-4">File type: doc, docx, pdf, jpg, jpeg, png</a>
                    </div>

                    <div class="d-flex justify-content-center align-items-center mt-3">
                        <a asp-controller="Users" asp-action="LoginOwn" type="button" class="btn btn-outline-secondary" style="padding: 0;text-decoration: underline;border: none;">Cancel</a>

                        <button type="button" onclick="nextStep();" class="btn btn-primary ms-5">Next</button>
                    </div>
                </div>
            </div>

            <!-- Step 2 Content -->

            <div class="container mt-3 d-none" id="Step2">
                <div class="row mt-5">
                    <div class="col-md-6">
                        <label asp-for="Mileage" class="col-md-2 fw-bold">Mileage:</label><br>
                        <input asp-for="Mileage" class="col-md-2 mt-3" style="width: 150px; margin-left: 3%;" type="number" required>
                        <div class="col-md-2" style="width: 150px; margin-left: 3%;"> <span asp-validation-for="Mileage" id="checkMileage" class="text-danger fw-bold"></span></div>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FuelConsumption" class="fw-bold">Fuel consumption:</label><br>
                        <input asp-for="FuelConsumption" class="col-md-2 mt-3" style="margin-left: 3%;" type="number">
                        <span class="fw-bold">liter/100 km</span><br />
                        <span asp-validation-for="FuelConsumption" id="checkFuel" style="margin-left: 3%;" class="text-danger fw-bold col-md-2 mt-3"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="col-md-2 fw-bold">Address:</label><br>
                        <input class="mt-3" type="text" style="width: 400px; margin-left: 3%;" readonly
                               placeholder="Search for an address">
                        <select onchange="filterDistrict();filterWard();" class="form-select mt-3" style="width: 400px; margin-left: 3%;" name="city" id="city"
                                required>
                            @foreach (var c in ViewBag.City)
                            {
                                <option value="@c.CityId">@c.CityProvince</option>
                            }
                        </select>
                        <select onchange="filterWard()" class="form-select mt-3" style="width: 400px; margin-left: 3%;" name="district"
                                id="district" required>
                            @foreach (var d in ViewBag.District)
                            {
                                <option data-brand="@d.CityId" value="@d.DistrictId">@d.DistrictName</option>
                            }
                        </select>
                        <select class="form-select mt-3" style="width: 400px; margin-left: 3%;" name="ward" id="ward"
                                required>
                            @foreach (var w in ViewBag.Ward)
                            {
                                <option data-brand="@w.DistrictId" value="@w.WardId">@w.WardName</option>
                            }
                        </select>
                        <input class="mt-3" style="width: 400px; margin-left: 3%;" type="text" name="street" id="street"
                               placeholder="House number, Street">
                        <div class="text-danger fw-bold mt-3" style="margin-left: 3%;" id="checkStreet"></div>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Description" class="col-md-2 fw-bold">Description:</label>
                        <br>
                        <textarea asp-for="Description" placeholder="Description of your vehicle"
                                  style="height: 180px;width: 400px; border-color: black; border-radius: 0%;"
                                  class="form-control mt-2"></textarea>
                        <span asp-validation-for="Description" id="checkDes" class="col-md-2 ms-1 fw-bold text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <label class="col-md-2 fw-bold">Additional functions:</label><br>
                    <div class="row mt-3">
                        <div class="col-md-1"></div>
                        <table class="col-md-2 bg-white">
                            <tr class="row flex items-center">
                                <td class="flex items-center col-md-9">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-bluetooth" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                              d="m8.543 3.948 1.316 1.316L8.543 6.58zm0 8.104 1.316-1.316L8.543 9.42zm-1.41-4.043L4.275 5.133l.827-.827L7.377 6.58V1.128l4.137 4.136L8.787 8.01l2.745 2.745-4.136 4.137V9.42l-2.294 2.274-.827-.827zM7.903 16c3.498 0 5.904-1.655 5.904-8.01 0-6.335-2.406-7.99-5.903-7.99S2 1.655 2 8.01C2 14.344 4.407 16 7.904 16Z" />
                                    </svg>
                                    Bluetooth
                                </td>
                                <td class="col-md-3">
                                    <input type="checkbox" name="Bluetooth" value="true" />
                                </td>
                            </tr>
                            <tr class="row flex items-center">
                                <td class="flex items-center col-md-9">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-map-fill" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                              d="M16 .5a.5.5 0 0 0-.598-.49L10.5.99 5.598.01a.5.5 0 0 0-.196 0l-5 1A.5.5 0 0 0 0 1.5v14a.5.5 0 0 0 .598.49l4.902-.98 4.902.98a.5.5 0 0 0 .196 0l5-1A.5.5 0 0 0 16 14.5zM5 14.09V1.11l.5-.1.5.1v12.98l-.402-.08a.5.5 0 0 0-.196 0zm5 .8V1.91l.402.08a.5.5 0 0 0 .196 0L11 1.91v12.98l-.5.1z" />
                                    </svg>
                                    GPS
                                </td>
                                <td class="col-md-3">
                                    <input type="checkbox" name="GPS" value="true" />
                                </td>
                            </tr>
                            <tr class="row flex items-center">
                                <td class="flex items-center col-md-9">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-camera-fill" viewBox="0 0 16 16">
                                        <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                                        <path d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0" />
                                    </svg>
                                    Camera
                                </td>
                                <td class="col-md-3">
                                    <input type="checkbox" name="Camera" value="true" />
                                </td>
                            </tr>
                        </table>
                        <div class="col-md-2">
                        </div>
                        <table class="col-md-2 bg-white">
                            <tr class="row flex items-center">
                                <td class="flex items-center col-md-9">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-sun" viewBox="0 0 16 16">
                                        <path d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6m0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0m9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708" />
                                    </svg>
                                    Sunroof
                                </td>
                                <td class="col-md-3">
                                    <input type="checkbox" name="Sunroof" value="true" />
                                </td>
                            </tr>
                            <tr class="row flex items-center">
                                <td class="flex items-center col-md-9">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-lock-fill" viewBox="0 0 16 16">
                                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2" />
                                    </svg>
                                    Child lock
                                </td>
                                <td class="col-md-3">
                                    <input type="checkbox" name="Childlock" value="true" />
                                </td>
                            </tr>
                            <tr class="row flex items-center">
                                <td class="flex items-center col-md-9">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-person-arms-up" viewBox="0 0 16 16">
                                        <path d="M8 3a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3" />
                                        <path d="m5.93 6.704-.846 8.451a.768.768 0 0 0 1.523.203l.81-4.865a.59.59 0 0 1 1.165 0l.81 4.865a.768.768 0 0 0 1.523-.203l-.845-8.451A1.5 1.5 0 0 1 10.5 5.5L13 2.284a.796.796 0 0 0-1.239-.998L9.634 3.84a.7.7 0 0 1-.33.235c-.23.074-.665.176-1.304.176-.64 0-1.074-.102-1.305-.176a.7.7 0 0 1-.329-.235L4.239 1.286a.796.796 0 0 0-1.24.998l2.5 3.216c.317.316.475.758.43 1.204Z" />
                                    </svg>
                                    Child seat
                                </td>
                                <td class="col-md-3">
                                    <input type="checkbox" name="Childseat" value="true" />
                                </td>
                            </tr>
                        </table>
                        <div class="col-md-2"></div>
                        <table class="col-md-2 bg-white">
                            <tr class="row flex items-center">
                                <td class="flex items-center col-md-9">
