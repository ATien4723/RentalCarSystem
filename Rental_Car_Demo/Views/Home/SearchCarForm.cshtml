@model IEnumerable<Car>
@using Newtonsoft.Json
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "SearchCarForm";
    Layout = "_LayoutSearchCar";
}

@{
    var userString = Context.Session.GetString("User");

    User userLog = null;
    bool isUserLoggedIn = false;
    if (!string.IsNullOrEmpty(userString))
    {
        userLog = JsonConvert.DeserializeObject<User>(userString);
        isUserLoggedIn = true;
    }
}

<div id="carResultss" class="main-content mt-3">

    <div class="container my-1">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                @if (isUserLoggedIn)
                {
                    <li class="breadcrumb-item"><a asp-controller="Users" asp-action="LoginCus">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Search Results</li>
                }
                else
                {
                    <li class="breadcrumb-item"><a asp-controller="Users" asp-action="Guest">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Search Results</li>
                }
            </ol>
        </nav>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 sidebar mt-3">
                <div class="filters mb-3">
                    <label class="d-flex justify-content-between align-items-center" data-bs-toggle="collapse"
                           data-bs-target="#carTypeOptions" aria-expanded="false" aria-controls="carTypeOptions">
                        Car Brands
                        <span class="fa-sharp fa-light fa-caret-down"></span>
                    </label>
                    <div class="collapse" id="carTypeOptions">
                        @foreach (var car in Model.Select(c => c.Brand.BrandName).Distinct())
                        {
                            <div class="form-check">
                                <input class="form-check-input brandNameCheckbox" type="checkbox" name="brandName" value="@car">
                                <p class="form-check-label">@car</p>
                            </div>
                        }
                    </div>
                </div>

                <div class="filters mb-3">
                    <label class="d-flex justify-content-between align-items-center" data-bs-toggle="collapse"
                           data-bs-target="#seatingCapacityOptions" aria-expanded="false"
                           aria-controls="seatingCapacityOptions">
                        Seating Capacity
                        <span class="fa-sharp fa-light fa-caret-down"></span>
                    </label>
                    <div class="collapse" id="seatingCapacityOptions">
                        @foreach (var car in Model.Select(c => c.Seats).Distinct())
                        {
                            <!-- Add Seating Capacity options here -->
                            <div class="form-check">
                                <input class="form-check-input seatsCheckbox" type="checkbox" id="seats-@car" value="@car">
                                <p class="form-check-label" for="seats-@car">@car</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="filters mb-3">
                    <label class="d-flex justify-content-between align-items-center" data-bs-toggle="collapse"
                           data-bs-target="#gearTransmissionOptions" aria-expanded="false"
                           aria-controls="gearTransmissionOptions">
                        Gear Transmission
                        <span class="fa-sharp fa-light fa-caret-down"></span>
                    </label>
                    <div class="collapse" id="gearTransmissionOptions">
                        <!-- Add Gear Transmission options here -->
                        @foreach (var car in Model.Select(c => c.TransmissionType).Distinct())
                        {
                            <div class="form-check">
                                <input class="form-check-input transmissionCheckbox" type="checkbox" id="transmission-@car" value="@car">
                                <p class="form-check-label" for="transmission-@car">@(car ? "Automatic" : "Manual")</p>
                            </div>
                        }
                    </div>
                </div>

                <div class="filters mb-3">
                    <label class="d-flex justify-content-between align-items-center" data-bs-toggle="collapse"
                           data-bs-target="#fuleTypeOptions" aria-expanded="false"
                           aria-controls="fuleTypeOptions">
                        Fuel Type
                        <span class="fa-sharp fa-light fa-caret-down"></span>
                    </label>
                    <div class="collapse" id="fuleTypeOptions">
                        <!-- Add Gear Transmission options here -->
                        @foreach ( var car in Model.Select (c => c.FuelType).Distinct () ) {
                            <div class="form-check">
                                <input class="form-check-input fuleTypeCheckbox" type="checkbox" id="transmission-@car" value="@car">
                                <p class="form-check-label" for="fuelType-@car">@(car ? "Gasoline" : "Diesel")</p>
                            </div>
                        }
                    </div>
                </div>


                <div class="filters mb-3">
                    <label class="d-flex justify-content-between align-items-center" data-bs-toggle="collapse"
                           data-bs-target="#priceRangeOptions" aria-expanded="false" aria-controls="priceRangeOptions">
                        Price Range
                        <span class="fa-sharp fa-light fa-caret-down"></span>
                    </label>
                    <form id="priceRangeForm" method="post" action="/Controller/SearchCar">
                        <div class="collapse" id="priceRangeOptions">
                            <div class="form-check">
                                <input class="form-check-input priceRangeCheckbox" type="checkbox" id="lowRange" name="priceRange" value="0-100000">
                                <label class="form-check-label" style="font-weight:normal" for="lowRange">0 - 100000VND</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input priceRangeCheckbox" type="checkbox" id="lowRange" name="priceRange" value="0-500000">
                                <label class="form-check-label" style="font-weight:normal" for="lowRange">100000 - 500000VND</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input priceRangeCheckbox" type="checkbox" id="midRange" name="priceRange" value="500000-1000000">
                                <label class="form-check-label" style="font-weight:normal" for="midRange">500000 - 1000000VND</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input priceRangeCheckbox" type="checkbox" id="highRange" name="priceRange" value="1000000-5000000">
                                <label class="form-check-label" style="font-weight:normal" for="highRange">1000000 - 5000000VND</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input priceRangeCheckbox" type="checkbox" id="highRange" name="priceRange" value="1000000-10000000">
                                <label class="form-check-label" style="font-weight:normal" for="highRange">5000000 - 10000000VND</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input priceRangeCheckbox" type="checkbox" id="highRange" name="priceRange" value="1000000-100000000">
                                <label class="form-check-label" style="font-weight:normal" for="highRange">10000000 - 100000000VND</label>
                            </div>
                        </div>
                    </form>
                    </div>

                <div class="filters mb-3">
                    <label class="d-flex justify-content-between align-items-center" data-bs-toggle="collapse"
                           data-bs-target="#brandsOptions" aria-expanded="false" aria-controls="brandsOptions">
                        Brands
                        <span class="fa-sharp fa-light fa-caret-down"></span>
                    </label>
                    <div id="brandsOptions" class="collapse">
                        <div class="brand-list">
                        @foreach (var brand in Model.Select(c => c.Brand).Distinct())
                        {
                                <div class="brand-item form-check" onclick="toggleSelection(this)" onclick="performBrandSearch('@brand.BrandName')">
                                <img src="~/img/@brand.BrandLogo" alt="@brand.BrandName" class="img-thumbnail" />
                            </div>
                        }
                         </div>
                    </div>
                </div>
                <!-- Other filters can be added here -->
            </div>
            <div class="col-md-9">
                <div class="mb-4">
                    <h5 class="mb-3 details-label">Pickup Details</h5>
                    <div class="d-flex mb-3 details-item">
                        <input type="text" class="form-control me-2 details-input" id="pickupLocation" name="pickupLocation" placeholder="Location" value="@ViewBag.location" onkeyup="fetchSuggestions(this.value, 'pickupLocation')" list="pickupLocationSuggestions" onchange="handleSelection(event)">
                        <datalist id="pickupLocationSuggestions"></datalist>
                        <input type="date" class="form-control me-2 details-input" id="pickupDateInput" name="pickupDate" value="@ViewBag.pickupDate.ToString("yyyy-MM-dd")">
                        <input type="time" class="form-control details-input" id="pickupTimeInput" name="pickupTime" value="@ViewBag.pickupTime.ToString("HH:mm")">
                        <button type="button" class="btn btn-secondary" onclick="resetLocationInput('pickupLocation')">Clear</button>
                    </div>

                    <h5 class="mb-3 details-label">Drop off Details</h5>
                    <div class="d-flex mb-3 details-item">
                        <input type="text" class="form-control me-2 details-input" id="dropLocation" name="dropLocation" placeholder="Drop Location" onkeyup="fetchSuggestions(this.value, 'dropLocation')" list="dropLocationSuggestions" onchange="handleSelection(event)">
                        <datalist id="dropLocationSuggestions"></datalist>
                        <input type="date" class="form-control me-2 details-input" id="dropDateInput" name="dropoffDate" value="@ViewBag.dropoffDate.ToString("yyyy-MM-dd")">
                        <input type="time" class="form-control details-input" id="dropTimeInput" name="dropoffTime" value="@ViewBag.dropoffTime.ToString("HH:mm")">
                        <button type="button" class="btn btn-secondary" onclick="resetLocationInput('dropLocation')">Clear</button>
                    </div>
                </div>


                <div id="carResults" class="row">
                    @foreach (var car in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <a href="javascript:void(0);" onclick="navigateToCarDetails('@car.CarId')">
                                    <img src="~/img/@car.FrontImage" class="card-img-top" alt="@car.Name">
                                </a>
                                <div class="card-body">
                                    <h5 class="card-title">@car.Name</h5>
                                    <div class="details">
                                        <p class="card-text">
                                            <i class="fa-sharp fa-solid fa-location-smile"></i>
                                            <span>
                                                @car.Address.District?.DistrictName, @car.Address.City?.CityProvince
                                            </span>
                                        </p>
                                        <div class="row">
                                            <div class="col-6">
                                                <p class="card-text"><i class="fa-duotone fa-car icon"></i> @car.Brand.BrandName</p>
                                            </div>
                                            <div class="col-6">
                                                <p class="card-text"><i class="fa-solid fa-gas-pump icon"></i> @(car.FuelType ? "Gasoline" : "Diesel")</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <p class="card-text">
                                                    <i class="fa-solid fa-person-seat icon"></i> @car.Seats
                                                </p>
                                            </div>
                                            <div class="col-6">
                                                <p class="card-text">
                                                    <i class="fa-sharp fa-solid fa-gears icon"></i> @(car.TransmissionType ? "Automatic" : "Manual")
                                                </p>
                                            </div>
                                        </div>
                                        <p class="card-text">
                                            <i class="fa-sharp fa-regular fa-calendar-days icon"></i> @car.ProductionYear
                                        </p>
                                    </div>
                                    <p class="price">@car.BasePrice.ToString("N0")VND</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



