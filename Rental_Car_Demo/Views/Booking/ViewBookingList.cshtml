@model Rental_Car_Demo.Models.Car
@{
    Layout = "~/Views/Shared/_LayoutBookingList.cshtml";
}
@using Rental_Car_Demo.Repository.BookingRepository
<head>
    <style>
        .main-image-container {
            width: 100%;
            height: 400px; /* Fixed height */
        }

        .main-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .thumbnail-image {
            width: 100%;
            height: 100px; /* Fixed height */
            object-fit: cover;
        }

        .thumbnail-container {
            margin-top: 10px;
        }

        .price {
            color: green;
            font-size: 12px;
            font-weight: bold;
        }

        .offer-section {
            margin-top: 20px;
        }

        .offer-btn {
            background-color: green;
            color: white;
            width: 100%;
        }

        .carousel {
            position: relative;
        }

        .carousel-inner img {
            width: 100%;
            height: 115%;
            object-fit: cover;
        }

        .car-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
            margin-bottom: 25px;
        }


        .carousel-control-prev {
            left: 10px;
        }

        .carousel-control-next {
            right: 10px;
        }

        .custom-lightgrey {
            background-color: lightgrey;
            border-color: lightgrey;
            color: black;
        }

        .custom-lightgrey:hover {
            background-color: grey;
            border-color: grey;
            color: black;
            }
    </style>
</head>
<body>
    @if ( TempData["ErrorMessage"] != null ) {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="container mt-5">
        <a class="link mt-5" href="~/Users/LoginCus">Home</a> > <span class="fw-bold">View Bookings</span>

        <h2 class="mt-3" style="font-weight: bold;">List of Bookings</h2>

        <div class="d-flex justify-content-between align-items-center mt-4">
            @if ( ViewBag.Count == 0 ) {
                <a>You have no bookings</a>
            } else {
                <a style="font-weight: bold;
                     border: 1px solid #ddd;
                     border-radius: 10px;
                     padding: 5px;">You have @ViewBag.Count on-going bookings</a>
            }

            <form id="sortForm" method="post" asp-action="ViewBookingList">
                <select id="sortOrder" name="sortOrder" class="form-select w-auto">
                    <option value="newest">Newest to Latest</option>
                    <option value="latest">Latest to Newest</option>
                    <option value="highest">Highest to Lowest</option>
                    <option value="lowest">Lowest to Highest</option>
                </select>
            </form>
        </div>
    </div>



    <div id="listingContainer">
        @foreach ( var b in ViewBag.Bookings ) {
            <div class="listingItem container car-card  mt-3 p-5">
                <div class="row">
                    <div class="col-md-6">
                        <!-- Preview car image -->
                        <div id="demo@(b.CarId)" class="carousel slide" data-bs-ride="carousel">
                            <!-- Indicators/dots -->
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#demo@(b.CarId)" data-bs-slide-to="0" class="active"></button>
                                <button type="button" data-bs-target="#demo@(b.CarId)" data-bs-slide-to="1"></button>
                                <button type="button" data-bs-target="#demo@(b.CarId)" data-bs-slide-to="2"></button>
                                <button type="button" data-bs-target="#demo@(b.CarId)" data-bs-slide-to="3"></button>
                            </div>
                            <!-- The slideshow/carousel -->
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner main-image-container">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100 main-image" src="~/img/@b.Car.FrontImage"
                                             alt="Front img">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100 main-image" src="~/img/@b.Car.BackImage"
                                             alt="Back img">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100 main-image" src="~/img/@b.Car.LeftImage"
                                             alt="Left img">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100 main-image" src="~/img/@b.Car.RightImage"
                                             alt="Right img">
                                    </div>
                                </div>

                                <!-- Left and right controls/icons -->
                                <button class="carousel-control-prev" type="button" data-bs-target="#demo@(b.CarId)" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#demo@(b.CarId)" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <h4 class=" fw-bold mb-3">
                            <a style="text-decoration:none;color:black;" href="@Url.Action("EditBookingDetail", "Booking",new { startDate = b.StartDate, endDate = b.EndDate, carId = b.CarId, bookingNo = b.BookingNo })">
                                @b.Car.Name
                            </a>
                        </h4>
                        <ul class="price">
                            <li><p class="fw-bold">From @b.StartDate</p></li>
                            <li><p class="fw-bold">To @b.EndDate</p></li>
                        </ul>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th scope="row">Number of days:</th>
                                    <td>@BookingHelper.GetDaysBetween(b.StartDate, b.EndDate)<span class="fw-bold"></span></td>
                                </tr>
                                <tr>
                                    <th scope="row">Base price:</th>
                                    <td>@b.Car.BasePrice.ToString("N0")<span class="fw-bold"> VND/day</span></td>
                                </tr>
                                <tr>
                                    <th scope="row">Deposit:</th>
                                    <td>@BookingHelper.GetTotalDeposit(b.Car.Deposit, b.StartDate, b.EndDate).ToString("N0")<span class="fw-bold"> VND</span></td>
                                </tr>
                                <tr>
                                    <th scope="row">Total:</th>
                                    <td class="text-success fw-bold">@BookingHelper.GetTotalPrice(b.Car.BasePrice, b.StartDate, b.EndDate).ToString("N0")<span class="fw-bold "> VND</span></td>
                                </tr>
                                <tr>
                                    <th scope="row">Booking no:</th>
                                    <td>@b.BookingNo<span class="fw-bold"></span></td>
                                </tr>
                                <tr>
                                    <th scope="row">Booking status:</th>
                                    <td>
                                        @{
                                            string statusText = "";
                                            string statusStyle = "";
                                            switch ( b.Status ) {
                                                case 0:
                                                    statusText = "Cancelled";
                                                    statusStyle = "color: grey";
                                                    break;
                                                case 1:
                                                    statusText = "Pending Deposit";
                                                    statusStyle = "color: red";
                                                    break;
                                                case 2:
                                                    statusText = "Confirmed";
                                                    statusStyle = "color: forestgreen";
                                                    break;
                                                case 3:
                                                    statusText = "In-Progress";
                                                    statusStyle = "color: orange";
                                                    break;
                                                case 4:
                                                    statusText = "Pending Payment";
                                                    statusStyle = "color: red";
                                                    break;
                                                case 5:
                                                    statusText = "Completed";
                                                    statusStyle = "color: blue";
                                                    break;
                                            }
                                        }
                                        <span style="@statusStyle">@statusText</span>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        @if ( b.Status == 1 ) {
                            <div class="row">
                                <div class="col-sm-6">
                                    <a href="@Url.Action("ViewCarDetailsByCustomer", "Car",new {CarId = b.CarId})" class="btn btn-primary w-100 ">View details</a>
                                </div>
                                <div class="col-sm-6">
                                    <a id="cancelButton_@b.BookingNo" class="btn btn-danger cancelButton" data-booking-no="@b.BookingNo" data-bs-toggle="modal" data-bs-target="#cancelModal_@b.BookingNo">Cancel booking</a>
                                </div>
                            </div>
                        } else if ( b.Status == 2 ) {
                            <div class="row">
                                <div class="col-sm-6">
                                    <a href="@Url.Action("ViewCarDetailsByCustomer", "Car",new {CarId = b.CarId})" class="btn btn-primary w-100">View details</a>
                                </div>
                                <div class="col-sm-3">
                                    <button onclick="getValueForPickUp(@b.BookingNo)" type="button" class="btn btn-primary mt-2 w-100 custom-lightgrey" data-bs-toggle="modal" data-bs-target="#confirm-pickup" data-bs-toggle="modal" data-bs-target="#confirm-pickup">Confirm Pick-up</button>
                                </div>
                                <div class="col-sm-3">
                                    <a id="cancelButton_@b.BookingNo" class="btn btn-danger mt-2 w-100 cancelButton" data-booking-no="@b.BookingNo" data-bs-toggle="modal" data-bs-target="#cancelModal_@b.BookingNo">Cancel booking</a>
                                </div>
                            </div>
                        } else if ( b.Status == 4 || b.Status == 3 ) {
                            <div class="row">
                                <div class="col-sm-6">
                                    <a href="@Url.Action("ViewCarDetailsByCustomer", "Car",new {CarId = b.CarId})" class="btn btn-primary w-100">View details</a>
                                </div>
                                <div class="col-sm-6">
                                    <a class="btn btn-primary mt-2 w-100" data-bs-toggle="modal" data-bs-target="#returnCarModal">Return car</a>
                                </div>
                            </div>
                        } else if ( b.Status == 0 || b.Status == 5 ) {
                            <div class="col-sm-12">
                                <a href="@Url.Action("ViewCarDetailsByCustomer", "Car",new {CarId = b.CarId})" class="btn btn-primary w-50">View details</a>
                            </div>
                        }
                    </div>
                </div>
            </div>



            <form asp-controller="Booking" asp-action="CancelBooking" method="post" id="Form_@b.BookingNo" enctype="multipart/form-data" style="margin: 0; padding: 0;">
                <input name="startDate" value="@(b.StartDate)" hidden />
                @* <input name="endDate" value="@(b.EndDate)" hidden /> *@
                <input name="carId" value="@(b.CarId)" hidden />
                <input name="bookingNo" value="@(b.BookingNo)" hidden />

                <!-- Modal -->
                <div class="modal fade" id="cancelModal_@b.BookingNo" tabindex="-1" role="dialog" aria-labelledby="cancelModalLabel_@b.BookingNo" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="cancelModalLabel_@b.BookingNo">Confirm Cancellation</h5>
                                <button type="button" class="close" id="closeModalButton_@b.BookingNo" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to cancel this booking?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" id="closeModal_@b.BookingNo">Close</button>
                                <input type="submit" value="Yes" id="confirmCancel_@b.BookingNo" class="btn btn-danger">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    // Get elements
                    var cancelButton = document.getElementById('cancelButton_@b.BookingNo');
                    var cancelModal = document.getElementById('cancelModal_@b.BookingNo');
                    var closeModalButton = document.getElementById('closeModalButton_@b.BookingNo');
                    var closeModal = document.getElementById('closeModal_@b.BookingNo');
                    var confirmCancel = document.getElementById('confirmCancel_@b.BookingNo');

                    // Show modal when "Cancel booking" button is clicked
                    cancelButton.addEventListener('click', function () {
                        $(cancelModal).modal('show'); // Using jQuery to show the modal
                    });

                    // Close modal when "Close" button or the 'x' is clicked
                    closeModalButton.addEventListener('click', function () {
                        $(cancelModal).modal('hide'); // Using jQuery to hide the modal
                    });

                    closeModal.addEventListener('click', function () {
                        $(cancelModal).modal('hide'); // Using jQuery to hide the modal
                    });

                    // Form submission when "Yes" button is clicked
                    confirmCancel.addEventListener('click', function () {
                        // Form is automatically submitted when "Yes" button is clicked
                    });
                });
            </script>
            <script>
                document.getElementById('Form_@b.BookingNo').addEventListener('submit', function () {
                    var submitButton = document.getElementById('confirmCancel_@b.BookingNo');
                    submitButton.disabled = true;
                    submitButton.innerText = 'Processing...'; // Optional: change button text to indicate processing
                });
            </script>



            <form id="returnCarForm" asp-controller="Car" asp-action="ReturnCar"
                  asp-route-carId="@(b.CarId)" asp-route-userId="@(b.UserId)"
                  asp-route-amount="@(((DateTime.Today > b.StartDate && DateTime.Today < b.EndDate)||DateTime.Today<b.StartDate)
                 ? BookingHelper.GetTotalDeposit(b.Car.Deposit, b.StartDate, b.EndDate) - BookingHelper.GetTotalPrice(b.Car.BasePrice, b.StartDate, b.EndDate)
                 : BookingHelper.GetTotalDeposit(b.Car.Deposit, b.StartDate, b.EndDate) - BookingHelper.GetTotalPriceFromToday(b.Car.BasePrice, b.StartDate, DateTime.Today.Date))"
                  method="post" style="display: none;">
                <input type="hidden" name="returnUrl" value="~/">
            </form>
            <div class="modal fade" id="returnCarModal" tabindex="-1" aria-labelledby="returnCarModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header modal-header-center">
                            <h5 class="modal-title" id="logoutModalLabel">Return Car</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body modal-body-center">
                            @if ( ( DateTime.Today > b.StartDate && DateTime.Today < b.EndDate ) || DateTime.Today < b.StartDate ) {
                                @if ( BookingHelper.GetTotalPrice (b.Car.BasePrice, b.StartDate, b.EndDate) > BookingHelper.GetTotalDeposit (b.Car.Deposit, b.StartDate, b.EndDate) ) {
                                    <p class="text-center w-100">
                                        Please confirm to return the car.
                                        <br />
                                        The remaining amount of @(
                            ( BookingHelper.GetTotalPrice (b.Car.BasePrice, b.StartDate, b.EndDate) -
                            BookingHelper.GetTotalDeposit (b.Car.Deposit, b.StartDate, b.EndDate) ).ToString ("N0")
                            ) VND will be deducted from your wallet.
                                    </p>

                                } else {
                                    <p class="text-center w-100">
                                        Please confirm to return the car.
                                        <br />
                                        The exceeding amount of @(
                            ( BookingHelper.GetTotalDeposit (b.Car.Deposit, b.StartDate, b.EndDate) -
                            BookingHelper.GetTotalPrice (b.Car.BasePrice, b.StartDate, b.EndDate) ).ToString ("N0")
                            ) VND will be returned to your wallet.
                                    </p>

                                }
                            } else if ( DateTime.Today > b.EndDate ) {
                                @if ( BookingHelper.GetTotalPriceFromToday (b.Car.BasePrice, b.StartDate, DateTime.Today.Date) > BookingHelper.GetTotalDeposit (b.Car.Deposit, b.StartDate, b.EndDate) ) {
                                    <p class="text-center w-100">
                                        Please confirm to return the car.
                                        <br />
                                        You returned the car @(( DateTime.Today.Date - b.EndDate.Date ).Days) days late. You have to pay an additional @BookingHelper.GetTotalPriceFromToday (b.Car.BasePrice, b.EndDate, DateTime.Today).ToString ("N0") VND for violating the terms of use.
                                        <br />
                                        The remaining amount of @(
                            ( BookingHelper.GetTotalPriceFromToday (b.Car.BasePrice, b.StartDate, DateTime.Today.Date) -
                            BookingHelper.GetTotalDeposit (b.Car.Deposit, b.StartDate, b.EndDate) ).ToString ("N0")
                            ) VND will be deducted from your wallet.
                                    </p>

                                } else {
                                    <p class="text-center w-100">
                                        Please confirm to return the car.
                                        <br />
                                        You returned the car @(( DateTime.Today.Date - b.EndDate.Date ).Days) days late. You have to pay an additional @BookingHelper.GetTotalPriceFromToday (b.Car.BasePrice, b.EndDate, DateTime.Today).ToString ("N0") VND for violating the terms of use.
                                        <br />
                                        The exceeding amount of @(
                            ( BookingHelper.GetTotalDeposit (b.Car.Deposit, b.StartDate, b.EndDate) -
                            BookingHelper.GetTotalPriceFromToday (b.Car.BasePrice, b.StartDate, DateTime.Today.Date) ).ToString ("N0")
                            ) VND will be returned to your wallet.
                                    </p>

                                }
                            }

                        </div>
                        <div class="modal-footer">
                            <div class="d-flex w-100 justify-content-center align-items-center">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                <div class="vr mx-3"></div>
                                <button type="button" class="btn btn-primary" onclick="submitReturn()">Yes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>

    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-4">
            <div class="pagination-controls">
                <button onclick="prevPage()" id="btn_prev">Prev</button>
                <span id="pagination"></span>
                <button onclick="nextPage()" id="btn_next">Next</button>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-1">
            <select id="selectpage" onchange="pageselect()">
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="25">25</option>
                <option value="30">30</option>
            </select>
        </div>
    </div>

    <div class="modal" id="confirm-pickup">
        <div class="modal-dialog modal-dialog-centered modal-fullscreen-sm-down">
            <form asp-controller="Booking" asp-action="confirmPickupForDetailsPage" method="post">
                <div class="modal-content">

                    <!-- Modal body -->
                    <div class="modal-body rating-body">
                        <h6 id="textForPickup" class="text-center fw-bold text-danger w-100">
                            Are you sure you want to confirm pick-up?
                        </h6>

                        <input type="hidden" id="confirmPickup-bookingNo" name="bookingNo" value="" />
                        <input type="hidden" id="confirmPickup-sortOrder" name="sortOrder" value="" />

                    </div>
